$orange = #ED692B

*
  outline none
body
  background-color #efefef
  font-family SimHei
.header
  height 35px
  background-color #fff
  line-height 35px

  .icon-back
    position absolute
    top 0
    left 0
    display inline-block
    width 35px
    height 35px
    background url("../../img/nav_icon_back@2x.png") no-repeat center
    background-size 12px 18px

  .header_title
    display inline-block
    width 100%
    color $orange
    text-align center

.form-list
  margin-top 15px
  padding-right 15px
  background #fff
  .form-cell
    position relative
    display flex
    height 40px
    line-height 40px
    &-name
      display inline-block
      padding-left 40px
      &.cell-name
        width 60px
        background url("../../img/content_ID_icon@2x.png") no-repeat left 10px center
        background-size 20px 50%
      &.cell-code
        width 68px
        background url("../../img/content_verify_icon@2x.png") no-repeat left 12px center
        background-size 15px 50%
      &.cell-passwd
        background url("../../img/content_password_icon@2x.png") no-repeat left 12px center
        background-size 16px 50%
      &.cell-status
        background url("../../img/content_position_icon@2x.png") no-repeat left 12px center
        background-size 20px 50%
      &.cell-next
        background url("../../img/content_icon02_nor@2x.png") no-repeat right center
        background-size 14px 8px
    .select-list
      display none
      position absolute
      top 30px
      right 0
      z-index 5
      border 1px solid #cecece
      border-radius 5px
      background-color #efefef
      list-style none
      margin 0
      padding 0
      .select-li
        position relative
        height 40px
        padding 0 10px
        line-height 40px
        &:after
          content ''
          position absolute
          right 0
          bottom 0
          left 10px
          display block
          height 1px
          background-color #cecece
        &:last-child:after
          display none
    .form-cell-input
      flex 1
      .fci-input
        height 38px
        margin 0
        padding 0
        border none
    &:after
      content ''
      position absolute
      bottom -1px
      left 10px
      z-index 5
      display block
      height 1px
      width 100%
      background-color #efefef
.fci-box
  display flex
  .input-box
    display block
    flex 1
    .code_input
      width 100%
      height 38px
      border none

  .btn_code
    width 5rem
    height 14px
    margin-top 9px
    padding 4px 6px
    border-radius 5px
    background-color $orange
    color #fff
    font-size 14px
    line-height 14px
    text-align center



.bt_box
  height 40px
  margin-top 20px
  padding 0 15px
  .btn_login
    display block
    width 100%
    height 40px
    border none
    border-radius 5px
    background-color #C7C7C7
    color #fff
    font-size 1.1rem
    line-height 40px
  .bt-reg
    color #7A7A7C
    font-size 12px
    margin-left 70px
  .bt-passwd
    color $orange
    font-size 12px
