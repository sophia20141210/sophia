body
    margin 0
    padding 0
    background #efefef
    font-size 14px
header
    height 30px
    padding 10px
    line-height 30px
    font-size 18px
    font-weight bold
    text-align center
    background #ffffff
article
    margin-top 10px
    position absolute
    top 60px
    bottom 72px
    overflow auto
    section
        padding 10px 3%
        height 105px
        background #ffffff
        position relative
        margin-bottom 10px
    .con
        height 72px
        .icon-back
            display block
            width 30%
            height 76px
            float left
            background url("../../img/content_img@2x.png") no-repeat center
            background-size 100px 76px
            margin-right 5%
        .info
            float left
            width 65%
            color #646464
            line-height 20px
        .title
            display block
            width 100%
            height 20px
            .tdate
                float right
                color #b4b4b4
                font-size 12px
        .text
            display block
            text-indent 1.2em
        .date
            color #ff8a00
            font-size 12px
    .del
        position fixed
        display none
        background #ff3b30
        color #ffffff
        margin-top -82px
        right 0
        width 18%
        height 125px
        line-height 105px
        text-align center
        font-size 16px
    .status
        background #ea5404
        display block
        color #ffffff
        border-radius 5px
        width 55px
        height 22px
        line-height 22px
        text-align center
        float right
        &.active
            background #ffffff
            color #000
            width 100px
            margin-right 5%

