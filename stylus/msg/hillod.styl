$orange = #ED692B
body
  background-color #efefef
.tab_box
    width 100%

    height 32px
    padding 9px 0
    background-color #fff
.tab_bar
    display flex
    width 80%
    height 30px
    margin 0 auto
    padding 0
    list-style none
    border-radius 5px
    border 1px solid $orange
    color $orange
    .tab_bar-cell
        position relative
        flex 1
        line-height 30px
        text-align center

        .tab_tab
            position absolute
            vertical-align super
            font-size 14px
            top -7px
        &:after
            content ''
            position absolute
            top 0
            right 0
            display block
            width 1px
            height 30px
            background-color $orange
        &:last-child:after
            content ''
            display none
        &.active
            background-color $orange
            color #fff

.demand_cells
    padding 15px
    margin-top -15px

.demand_cell
    width 100%
    height 120px
    border-radius 5px
    box-shadow 0 0 1px 1px #e0e0e0
    line-height 30px
    background-color #fff
    margin-top 15px

    .demand-title
        display flex
        height 30px
        padding 0 10px
        border-bottom 1px solid #cecece
        .d-t-name
            flex 1
            font-size 14px
    .demand-info
        margin 0
        padding 10px
        line-height 1.2em
        font-size 12px
        color #646464
    .demand-footer
        display flex
        padding 10px
        line-height 5px


        .text-time
            flex 1
            font-size .8rem
            font-style normal
            text-align right
            color #979797

